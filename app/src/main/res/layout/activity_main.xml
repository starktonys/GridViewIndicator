<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stark.gridviewindicator.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:verticalSpacing="16dp"
        android:background="#92c284"/>

    <com.stark.gridviewindicator.CirclePageIndicator
        android:id="@+id/indicator_point_container"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        app:fillColor="#fff"
        app:pageColor="#808080"
        app:radius="5dp"
        app:strokeColor="#808080"
        />


</LinearLayout>
